<!-- UPDATE EVENT FUNCTION -->
<div class="container-fluid3">
   <div class="panel panel-default">
      <div class="panel-heading">
         <h2 class="panel-title pull-left">Update Event</h2>
         <div class="clearfix"></div>
      </div>
      {{#if error}}
      <div class="alert alert-danger">
         <strong>Error! </strong>{{error}}
      </div>
      {{/if}}
      <!-- NAME FIELD -->
      <div class="panel-body">
         <form class="form-horizontal" method = "post" action="/events/{{event.id}}/update">
            <div class="form-group">
               <label class="control-label col-sm-3" for="name">Name:</label>
               <div class="col-sm-6">
                  <input type="text" class="form-control" name="name" value="{{event.name}}">
               </div>
            </div>
            <!-- DESCRIPTION FIELD -->
            <div class="form-group">
               <label class="control-label col-sm-3" for="description">Description:</label>
               <div class="col-sm-6">
                  <textarea class="form-control" name="description" placeholder="Enter event description">{{event.description}}</textarea>
               </div>
            </div>
            <!-- VENUE FIELD -->
            <div class="form-group ui-widget">
               <label class="control-label col-sm-3" for="venue">Venue:</label>
               <div class="col-sm-6">
                  <select name="venue" value="{{event.venue.id}}">
                     {{#venues}}
                     <option value="{{id}}">{{name}}</option>
                     {{/venues}}
                  </select>
               </div>
            </div>
            <!-- DATE FIELD -->
            <div class="form-group">
               <label class="control-label col-sm-3" for="date">Date:</label>
               <div class="col-sm-6">
                  <div class="input-group date" id="date">
                     <input type="text" class="form-control" name="date" value="{{dateFormat event.date "date"}}" placeholder="year-month-day">
                     <span class="input-group-addon">
                     <span class="fa fa-calendar"></span>
                     </span>
                  </div>
               </div>
            </div>
            <!-- TIME FIELD -->
            <div class="form-group">
               <label class="control-label col-sm-3" for="time">Time:</label>
               <div class="col-sm-6">
                  <div class="input-group time" id="time">
                     <input type="text" class="form-control" name="time" placeholder="hours:minutes:seconds" value="{{dateFormat event.time "time"}}">
                     <span class="input-group-addon">
                     <span class="fa fa-clock-o"></span>
                     </span>
                  </div>
               </div>
            </div>
            <!-- SUBMIT BUTTON -->
            <div class="form-group">
               <div class="col-sm-offset-5 col-sm-5">
                  <button type="submit" class="btn btn-hanuman">Update</button>
               </div>
            </div>
         </form>
      </div>
   </div>
</div>

