<!-- THE ADD EVENT PAGE  -->

{{#partial "content"}}

<!-- HEADING -->
<nav class="navbar navbar-default navbar-fixed-top">
   <div class="container-fluid">
      <div class="navbar-header">
         <a class="navbar-brand" href="../">EventLite</a>
      </div>
      <!-- NAVIGATION  -->
      <ul class="nav navbar-nav navbar-right">
         <li><a href="/">Home</a></li>
         <li class="active"><a href="/events">Events</a></li>
         <li><a href="/venues">Venues</a></li>
      </ul>
   </div>
</nav>

<div id="wrap">
<!-- QUICK LINKS -->
<div class="container-fluid2">
   <ol class="breadcrumb">
      <li><a href="../">Home</a></li>
      <li><a href="../events.html">Events</a></li>
      <li class="active">Details</li>
   </ol>
</div>

<!-- EVENT DETAILS -->
<div class="container-fluid3">
   <div class="panel panel-default">
      <div class="panel-heading">
         <h3 class="panel-title pull-left">Event Details</h3>
         <!-- UPDATE/DELETE FUNCTION -->
         <a class="btn btn-hanuman pull-right" role="button" href="/events/{{id}}/delete" >Delete</a>
         <a class="btn btn-hanuman pull-right" role="button" href="/events/{{id}}/update" >Update</a>
         <div class="clearfix"></div>
      </div>
      <!-- EVENT DETAILS -->
      <div class="panel-body">
         <div class="col-xs-5 v-center">
         	<p><b> Event : </b> &emsp; {{event.name}}</p>
         	<p><b> Venue : </b> &ensp; &nbsp; {{venue.name}}</p>
         	<p><b> Date : </b> &emsp; &nbsp; {{event.date}}</p>
         	<p><b> Time : </b> &emsp; {{event.time}}</p>
         	<p><b> Description : </b> &ensp; &nbsp; {{event.description}}</p>
         	<p></p>
         </div>
         
         <!-- GOOGLE MAPS API -->
         <div class="col-xs-7">
            {{> google-maps/maps center=center markers=markers }}
         </div>
      </div>
      
         <!-- TWITTER API -->
      <div class="panel-body">
         {{#if tweet}}
         <div class="alert alert-success">
            Your tweet <strong>{{tweet}}</strong> was published
         </div>
         {{/if}}
         <!-- TWITTER FORM -->
         <form class="form-horizontal" method = "post" action="/events/{{event.id}}">
            <div class="form-group" style="background-color: rgb(29,202,255); padding-bottom: 15px; margin-bottom: -15px; padding-top: 15px; border-radius: 0px 0px 3px 3px;">
               <label class="control-label col-sm-3" for="tweet"><i class="fa fa-twitter"></i></label>
               <div class="col-sm-6">
                  <div class="input-group tweet" id="tweet">
                     <input type="text" class="form-control" name="tweet" placeholder="I'm gonna attend {{event.name}}!!! #SoExcited">
                     <div class="input-group-btn">
                        <button type="submit" class="btn btn-hanuman">Tweet it!</button>
                     </div>
                  </div>
               </div>
            </div>
         </form>
      </div>
   </div>
</div>
</div>

