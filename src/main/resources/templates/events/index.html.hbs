<!-- THE EVENTS INDEX PAGE -->

{{#partial "content"}}

<!-- HEADING -->
<nav class="navbar navbar-default navbar-fixed-top">
   <div class="container-fluid">
      <div class="navbar-header">
         <a class="navbar-brand" href="/">EventLite</a>
      </div>
      <!-- NAVIGATION -->
      <ul class="nav navbar-nav navbar-right">
         <li><a href="/">Home</a></li>
         <li class="active"><a href="/events">Events</a></li>
         <li><a href="/venues">Venues</a></li>
      </ul>
   </div>
</nav>

<div id="wrap">
<!-- QUICK LINKS -->
<div class="container-fluid2">
   <ol class="breadcrumb">
      <li>
         <a href="/">
            <h5>Home</h5>
         </a>
      </li>
      <li class="active">Events</li>
      <!-- SEARCH TOOL -->
      <div class="pull-right">
         <form class="form-search form-inline" action="/events/s/" method="get">
            <div class="input-group {{#if errors.template}}has-error{{/if}}">
               <input class="form-control search-query" type="text" name="name" id="template" placeholder="Search Event" autofocus /><span class="input-group-btn">
               <button type="submit" class="btn btn-hanuman" > Search </button>
               </span>
               {{#if errors.template}}
               <p class="text-danger">{{errors.template}}</p>
               {{/if}}
            </div>
         </form>
      </div>
   </ol>
</div>

<!-- UPCOMING EVENTS -->
<div class="panel panel-default panel-table">
<div class="panel-heading">
   <div class="row">
      <div class="col col-xs-4">
         <h3 class="panel-title">Upcoming Events</h3>
      </div>
      <!-- ADD EVENT FUNCTION -->
      <div>
         <div class="col col-xs-8">
            <div class="pull-right">
               <a role="button" class="btn btn-hanuman" href="/events/add">
               <span class="glyphicon glyphicon-plus"
                  aria-hidden="true"></span>
               Add Event
               </a>
            </div>
         </div>
      </div>
   </div>
   <!-- EVENTS TABLE -->
   <div class="panel-body">
      <table class="table table-striped table-bordered table-list">
         <thead>
            <tr>
            <!-- EVENTS TABLE ROW -->
               <th><em class="fa fa-cog"></em></th>
               <th style="text-align: center"><i class="fa fa-bolt"></i> Event</th>
               <th style="text-align: center"><i class="fa fa-map-marker"></i> Venue</th>
               <th style="text-align: center"><i class="fa fa-map-marker"></i> Details</th>
               <th style="text-align: center"><i class="fa fa-calendar"></i> Date</th>
               <th style="text-align: center"><i class="fa fa-clock-o"></i> Time</th>
            </tr>
         </thead>
         {{#if errors}}
         <p class="h2 text-danger">There were errors in the submitted event!</p>
         {{/if}}
         <tbody>
            {{#eventsupcoming}}   
            <tr>
            <!-- UPDATE/DELETE EVENT FUNCTION -->
               <td align="center">
                  <a class="btn btn-default" href="/events/{{id}}/update"><em class="fa fa-pencil"></em></a>
                  <a class="btn btn-danger" href="/events/{{id}}/delete"><em class="fa fa-trash"></em></a>
               </td>
               <!-- EVENTS DETAILS -->
               <td style="text-align: center"><a href="/events/{{id}}">{{name}}</a></td>
               <td style="text-align: center">
                  <a href="/venues/{{venue.id}}">
                     {{venue.name}}
               </td>
               <td style="text-align: center">{{description}}</td>
               <td style="text-align: center">{{date}}</td>
               <td style="text-align: center">{{time}}</td>
            </tr>
            {{/eventsupcoming}}
         </tbody>
      </table>
   </div>
</div>
</div>

<!-- PREVIOUS EVENTS -->
<div class="panel panel-default panel-table">
<div class="panel-heading">
   <div class="row">
      <div class="col col-xs-4">
         <h3 class="panel-title">Previous Events</h3>
      </div>
   </div>
<div class="panel-body">
      <table class="table table-striped table-bordered table-list">
         <thead>
            <tr>
            <!-- EVENTS TABLE ROW -->
               <th><em class="fa fa-cog"></em></th>
               <th style="text-align: center"><i class="fa fa-bolt"></i> Event</th>
               <th style="text-align: center"><i class="fa fa-map-marker"></i> Venue</th>
               <th style="text-align: center"><i class="fa fa-map-marker"></i> Details</th>
               <th style="text-align: center"><i class="fa fa-calendar"></i> Date</th>
               <th style="text-align: center"><i class="fa fa-clock-o"></i> Time</th>
            </tr>
         </thead>
         {{#if errors}}
         <p class="h2 text-danger">There were errors in the submitted event!</p>
         {{/if}}
         <tbody>
            {{#eventspast}}   
            <tr>
            <!-- UPDATE/DELETE EVENT FUNCTION -->
               <td align="center">
                  <a class="btn btn-default" href="/events/{{id}}/update"><em class="fa fa-pencil"></em></a>
                  <a class="btn btn-danger" href="/events/{{id}}/delete"><em class="fa fa-trash"></em></a>
               </td>
               <!-- EVENTS DETAILS -->
               <td style="text-align: center"><a href="/events/{{id}}">{{name}}</a></td>
               <td style="text-align: center">
                  <a href="/venues/{{venue.id}}">
                     {{venue.name}}
               </td>
               <td style="text-align: center">{{description}}</td>
               <td style="text-align: center">{{date}}</td>
               <td style="text-align: center">{{time}}</td>
            </tr>
            {{/eventspast}}
         </tbody>
      </table>
   </div>
</div>
</div>

<!-- GOOGLE MAPS API IMPLEMENATION -->
<div class="panel panel-default panel-table">
<div class="panel-heading">
   <div class="row">
      <div class="col col-xs-4">
         <h3 class="panel-title">Map and Twitter Feed</h3>
      </div>
   </div>
  <div id="gmaps" style="font-size: 30px; text-align: center">
	  {{> google-maps/maps center=center markers=markers cluster=true }}
  </div> 
  </br>
  
            {{#if notSignedIn}}
            	<div style="text-align: center">
	                <a role="button" class="btn btn-hanuman" style="align: center" id="twitter" href="/connect/twitter">
	                    <span class="fa fa-twitter -s"
	                          aria-hidden="true"></span>
	                    Sign in
	                </a>          
                </div>  
                </br>
                {{else}}
	            <div class="panel panel-default panel-table">
	              <div class="panel-heading" style=" color:rgb(97, 97, 97) ;background-color: rgb(206, 206, 206); border-radius: 3px 3px 3px 3px;">
	                <div class="row">
	                  <div class="row" style="text-align: center">
	                      <h3 class="panel-title"><strong ><span style="color:white">@{{user}}</span>'s Tweets</strong></h3>
	                  </div>
	              </div>
	              <div class="panel-body">
	                <table class="table table-striped table-bordered table-list">
	                  <thead>
	                    <tr>
	      					<th><i class="fa fa-clock-o" style="color:white"></i></th>
	      					 <th style="text-align: center"><i class="fa fa-twitter -o" style="color:white"></i></th>
	                    </tr> 
	                  </thead>
	                  <tbody>
	                     {{#each tweetContents}}
	                          <tr>
	                            <td class="col-md-3">{{@key}}</td>
	        					<td style="text-align: center">{{this}}</td>
	                          </tr>
	                     {{/each}}
	                  </tbody>
	                </table>
	              </div>
	            </div>
	            </div>
 			{{/if}}
 		</div>
 	</div>
</div>

<!-- FOOTER -->
