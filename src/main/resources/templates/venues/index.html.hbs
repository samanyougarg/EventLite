<!-- THE VENUE INDEX PAGE -->

{{#partial "content"}}

<!-- HEADING -->
<nav class="navbar navbar-default navbar-fixed-top">
   <div class="container-fluid">
      <div class="navbar-header">
         <a class="navbar-brand" href="/">EventLite</a>
      </div>
      <!-- NAVIGATION -->
      <ul class="nav navbar-nav navbar-right">
         <li><a href="/">Home</a></li>
         <li><a href="/events">Events</a></li>
         <li class="active"><a href="/venues">Venues</a></li>
      </ul>
   </div>
</nav>

<div id="wrap">
<!-- QUICK LINKS -->
<div class="container-fluid2">
   <ol class="breadcrumb">
      <li>
         <a href="/">
            <h5>Home</h5>
         </a>
      </li>
      <li class="active">Venues</li>
      <div class="pull-right">
      <!-- SEARCH TOOL -->
         <form class="form-search form-inline" action="/venues/s/" method="get">
            <div class="input-group {{#if errors.template}}has-error{{/if}}">
               <input class="form-control search-query" type="text" name="name" id="template" placeholder="Search Venue" autofocus /><span class="input-group-btn">
               <button type="submit" class="btn btn-hanuman" > Search </button>
               </span>
               {{#if errors.template}}
               <p class="text-danger">{{errors.template}}</p>
               {{/if}}
            </div>
         </form>
      </div>
   </ol>
</div>

<!-- ALL VENUES -->
<div class="panel panel-default panel-table">
   <div class="panel-heading">
      <div class="row">
         <div class="col col-xs-4">
            <h3 class="panel-title">All Venues</h3>
         </div>
         <!-- ADD VENUE FUNCTION -->
         <div class="col col-xs-8">
            <div class="pull-right">
               <a role="button" class="btn btn-hanuman" href="/venues/add">
               <span class="glyphicon glyphicon-plus"
                  aria-hidden="true"></span>
               Add Venue
               </a>
            </div>
         </div>
      </div>
   </div>
   <!-- VENUES TABLE -->
   <div class="panel-body">
      <table class="table table-striped table-bordered table-list">
         <thead>
            <!-- VENUES TABLE ROW -->
            <tr>
               <th><em class="fa fa-cog"></em></th>
               <th style="text-align: center"><i class="fa fa-map-marker"></i> Venue</th>
               <th style="text-align: center"><i class="fa fa-users"></i> Capacity</th>
               <th style="text-align: center"><i class="fa fa-address-card"></i> Address</th>
               <th style="text-align: center"><i class="fa fa-globe"></i> City</th>
               <th style="text-align: center"><i class="fa fa-address-card-o"></i> Zip</th>
            </tr>
         </thead>
         {{#if errors}}
         <p class="h2 text-danger">There were errors in the submitted venue!</p>
         {{/if}}
         <tbody>
            {{#venues}}   
            <tr>
           	   <!-- DELETE/UPDATE VENUE FUNCTION -->
               <td align="center">
                  <a class="btn btn-default" href="/venues/{{id}}/update"><em class="fa fa-pencil"></em></a>
                  <a class="btn btn-danger" href="/venues/{{id}}/delete"><em class="fa fa-trash"></em></a>
               </td>
               <!-- VENUES DETAILS -->
               <td style="text-align: center"><a href="/venues/{{id}}">{{name}}</a></td>
               <td style="text-align: center">{{capacity}}</td>
               <td style="text-align: center">{{address}}</td>
               <td style="text-align: center">{{city}}</td>
               <td style="text-align: center">{{zip}}</td>
            </tr>
            {{/venues}}
         </tbody>
      </table>
   </div>
</div>

</div>

