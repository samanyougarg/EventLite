<!-- THE VENUE DETAILS PAGE -->

{{#partial "content"}}

<!-- HEADING -->
<nav class="navbar navbar-default navbar-fixed-top">
   <div class="container-fluid">
      <div class="navbar-header">
         <a class="navbar-brand" href="../">EventLite</a>
      </div>
      <!-- NAVIGATION -->
      <ul class="nav navbar-nav navbar-right">
         <li><a href="/">Home</a></li>
         <li><a href="/events">Events</a></li>
         <li class="active"><a href="/venues">Venues</a></li>
      </ul>
   </div>
</nav>

<div id="wrap">
<!-- QUICK LINKS -->
<div class="container-fluid2">
   <ol class="breadcrumb">
      <li><a href="../">Home</a></li>
      <li><a href="../venues.html">Venues</a></li>
      <li class="active">Details</li>
   </ol>
</div>

<div class="container-fluid3">
   <div class="panel panel-default">
      <div class="panel-heading">
      	 <!-- VENUE DETAILS -->
         <h3 class="panel-title pull-left">Venue Details</h3>
         <!-- UPDATE/DELETE VENUE FUNCTION -->
         <a class="btn btn-hanuman pull-right" role="button" href="/venues/{{id}}/delete" >Delete</a>
         <a class="btn btn-hanuman pull-right" role="button" href="/venues/{{id}}/update" >Update</a>
         <div class="clearfix"></div>
      </div>
      
      {{#if error}}
      <div class="alert alert-danger">
         <strong>Error! </strong>{{error}}
      </div>
      {{/if}}
      
      <!-- VENUE DETAILS -->
      <div class="panel-body">
         <div class="col-xs-4 v-center">
            <p><b> Venue : </b> &ensp; &ensp; &nbsp; &nbsp; {{venue.name}}</p>
            <p><b> Capacity : </b> &ensp; &nbsp; {{venue.capacity}}</p>
            <p><b> Address : </b> &emsp; &nbsp; {{venue.address}}</p>
            <p><b> City : </b> &ensp; &ensp; &ensp; &ensp; &ensp;&nbsp; {{venue.city}}</p>
            <p><b> Zip : </b> &ensp; &ensp; &emsp; &nbsp; &nbsp; &nbsp;{{venue.zip}}</p>
         </div>
         <!-- GOOGLE MAPS API -->
         <div class="col-xs-8">
            {{> google-maps/maps center=center markers=markers cluster=true }}
         </div>
         </div>
         </div>

      <!-- UPCOMING EVENTS -->
      <div class="panel panel-default panel-table">
      <div class="panel-heading">
           <div class="row">
              <div class="col col-xs-4">
                 <h3 class="panel-title">Upcoming Events</h3>
              </div>
           </div>
           <!-- EVENTS TABLE -->
           <div class="panel-body">
              <table class="table table-striped table-bordered table-list">
                 <thead>
                    <tr>
                    <!-- EVENTS TABLE ROW -->
                       <th style="text-align: center"><i class="fa fa-bolt"></i> Event</th>
                       <th style="text-align: center"><i class="fa fa-map-marker"></i> Venue</th>
                       <th style="text-align: center"><i class="fa fa-map-marker"></i> Details</th>
                       <th style="text-align: center"><i class="fa fa-calendar"></i> Date</th>
                       <th style="text-align: center"><i class="fa fa-clock-o"></i> Time</th>
                    </tr>
                 </thead>
                 <tbody>
                    {{#eventsupcoming}}   
                    <tr>
                       <!-- EVENTS DETAILS -->
                       <td style="text-align: center"><a href="/events/{{id}}">{{name}}</a></td>
                       <td style="text-align: center">
                          <a href="/venues/{{venue.id}}">
                             {{venue.name}}
                       </td>
                       <td style="text-align: center">{{description}}</td>
                       <td style="text-align: center">{{date}}</td>
                       <td style="text-align: center">{{time}}</td>
                    </tr>
                    {{/eventsupcoming}}
                 </tbody>
              </table>
          </div>
      </div>
      </div>
      </div>

      <!-- PREVIOUS EVENTS -->
      <div class="panel panel-default panel-table">
      <div class="panel-heading">
           <div class="row">
              <div class="col col-xs-4">
                 <h3 class="panel-title">Previous Events</h3>
              </div>
           </div>
        <div class="panel-body">
              <table class="table table-striped table-bordered table-list">
                 <thead>
                    <tr>
                    <!-- EVENTS TABLE ROW -->
                       <th style="text-align: center"><i class="fa fa-bolt"></i> Event</th>
                       <th style="text-align: center"><i class="fa fa-map-marker"></i> Venue</th>
                       <th style="text-align: center"><i class="fa fa-map-marker"></i> Details</th>
                       <th style="text-align: center"><i class="fa fa-calendar"></i> Date</th>
                       <th style="text-align: center"><i class="fa fa-clock-o"></i> Time</th>
                    </tr>
                 </thead>
                 <tbody>
                    {{#eventspast}}   
                    <tr>
                       <!-- EVENTS DETAILS -->
                       <td style="text-align: center"><a href="/events/{{id}}">{{name}}</a></td>
                       <td style="text-align: center">
                          <a href="/venues/{{venue.id}}">
                             {{venue.name}}
                       </td>
                       <td style="text-align: center">{{description}}</td>
                       <td style="text-align: center">{{date}}</td>
                       <td style="text-align: center">{{time}}</td>
                    </tr>
                    {{/eventspast}}
                 </tbody>
              </table>
           </div>
      </div>
    </div>
  </div>
</div>

<!-- FOOTER -->
<nav class="footer navbar-default navbar-fixed-bottom">
   <div class="container-fluid">
      <div class="navbar-header-hanuman">
         <a class="navbar-brand-hanuman" href="/">Â© EventLite. All Rights Reserved.</a>
