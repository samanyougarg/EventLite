 <!-- ADD VENUE FUNCTION -->
<div class="container-fluid3">
   <div class="panel panel-default">
      <div class="panel-heading">
         <h2 class="panel-title pull-left">Add Venue</h2>
         <div class="clearfix"></div>
      </div>
      {{#if error}}
      <div class="alert alert-danger">
         <strong>Error! </strong>{{error}}
      </div>
      {{/if}}
      <div class="panel-body">
       <!-- ADD VENUE FORM -->
         <form class="form-horizontal" method = "post" action="/venues/add">
            <!-- NAME FIELD -->	
            <div class="form-group">
               <label class="control-label col-sm-3" for="name">Name:</label>
               <div class="col-sm-6">
                  <input type="text" maxlength="255" required class="form-control" name="name" value="{{venue.name}}">
               </div>
            </div>
            <!-- CAPACITY FIELD -->
            <div class="form-group">
               <label class="control-label col-sm-3" for="capacity">Capacity:</label>
               <div class="col-sm-6">
                  <input type="number" step="1" required class="form-control" name="capacity" id="capacity" value="{{venue.capacity}}">
               </div>
            </div>
            <!-- ADDRESS FIELD -->
            <div class="form-group">
               <label class="control-label col-sm-3" for="address">Address:</label>
               <div class="col-sm-6">
                  <input type="text" maxlength="299" required class="form-control" name="address" value="{{venue.address}}">
               </div>
            </div>
            <!-- CITY FIELD -->
            <div class="form-group">
               <label class="control-label col-sm-3" for="city">City:</label>
               <div class="col-sm-6">
                  <input type="text" maxlength="299" required class="form-control" name="city" value="{{venue.city}}">
               </div>
            </div>
            <!-- ZIP FIELD -->
            <div class="form-group">
               <label class="control-label col-sm-3" for="zip">Zip:</label>
               <div class="col-sm-6">
                  <input type="text" required class="form-control" name="zip" id="zip" value="{{venue.zip}}">
               </div>
            </div>
            <!-- SUBMIT BUTTON -->
            <div class="form-group">
               <div class="col-sm-offset-5 col-sm-5">
                  <button type="submit" class="btn btn-hanuman">Add</button>
               </div>
            </div>
         </form>
      </div>
   </div>
</div>

